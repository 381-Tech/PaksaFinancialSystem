# Application Settings
SECRET_KEY=your-secret-key-here
REFRESH_SECRET_KEY=your-refresh-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
DB_ENGINE=sqlite
SQLITE_DB_PATH=./instance/paksa_finance.db

# For PostgreSQL (uncomment if using PostgreSQL)
# POSTGRES_DB=paksa_finance
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your-secure-password
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432

# First Superuser (change these in production)
FIRST_SUPERUSER_EMAIL=admin@example.com
FIRST_SUPERUSER_PASSWORD=change-this-password
FIRST_SUPERUSER_FULL_NAME="Admin User"

